{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./",
    "lib": ["es2015", "dom"],
    "types": ["mocha", "node"],
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "rootDir": "./",
    "watch": true,
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "strict": true
  },
  "exclude": ["node_modules", "typings/browser.d.ts", "typings/browser"]
}
